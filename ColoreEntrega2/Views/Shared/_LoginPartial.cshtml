@model IEnumerable<Colore_Entrega2.Models.Curriculo>

@using Microsoft.AspNetCore.Identity
@using ColoreEntrega2.Areas.Identity.Data

@inject SignInManager<ColoreEntrega2User> SignInManager
@inject UserManager<ColoreEntrega2User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
        @if(Model != null)
        {
           int i = 0;
           @foreach (var item in Model){
                @if(@item.Id.Equals(UserManager.GetUserId))
                {
                    i = @item.Id;
                    break;
                }
            }
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Curriculo" asp-action="Edit" asp-route-id="@Model.@i">Curriculo</a>
            </li>
                
        }else{
            <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Curriculo" asp-action="Create">>Curriculo</a>
                </li>             
            }        
    <li class="nav-item">
        <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Oláaa, @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link">Sair</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link " id="register" asp-area="Identity" asp-page="/Account/Register">Cadastro</a>
    </li>
    <li class="nav-item">
        <a class="nav-link " id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
